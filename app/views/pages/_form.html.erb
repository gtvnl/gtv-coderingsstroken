<% breadcrumb :page, @page %>

<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :project_number, label: 'Project nummer' %>
  </div>

  <div class="form-inputs">
    <%= f.input :title, label: 'Titel' %>
  </div>

  <div class="form-inputs">
    <%= f.input :size, collection: Page.paper_sizes.keys, include_blank: false, label: 'Formaat' %>
  </div>

  <div class="form-inputs">
    <%= f.input :layout, collection: [:portrait, :landscape], include_blank: false, label: 'Layout' %>
  </div>

  <div class="form-inputs">
    <%= f.input :num_of_lines, label: 'Aantal regels' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,"#{f.object.new_record? ? 'Maak Pagina' : 'Wijzig Pagina'}" %>
  </div>
<% end %>
