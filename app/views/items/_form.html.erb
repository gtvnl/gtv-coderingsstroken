<% breadcrumb :item, @item %>

<% unless @item.new_record? %>
  <%= simple_form_for([@page, @line, @item]) do |f| %>
    <%= render 'form_fields', f: f %>
  <% end %>
<% else %>
  <%= simple_form_for(@item, url: page_line_items_path) do |f| %>

    <%= render 'form_fields', f: f %>

  <% end %>
<% end %>
