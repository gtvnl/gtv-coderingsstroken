<% breadcrumb :item, @item %>


<%= simple_form_for([@page, @line, @item]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number, label: 'Nummer' %>
  </div>

  <div class="form-inputs">
    <%= f.input :title, label: 'Naam' %>
  </div>

  <div class="form-inputs">
    <%= f.input :width, label: 'Breedte (mm)' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,"#{f.object.new_record? ? 'Maak' : 'Wijzig'}" %>
  </div>
<% end %>
