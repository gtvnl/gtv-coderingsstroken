<%= simple_form_for(@line.new_record? ? @line : [@line.page, @line], url: page_lines_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :number, label: 'Nummer', input_html: { value: "#{@page.lines.count + 1}" } %>
  </div>

  <div class="form-inputs">
    <%= f.input :num_of_modules, label: 'Aantal modulen' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
